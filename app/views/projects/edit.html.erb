

<%= form_for @project do |f| %>
    <div class="form-group row no-padding text-center col-md-12">
      
        <%= f.text_field :project_name, placeholder: "Project Name", autofocus: true,
                                  class: "form-control input-lg" %>      
    </div>

    <div class="form-group row no-padding text-center col-md-12">

        <%= f.text_area :description, placeholder: "Project Description", autofocus: false,
                                  class: "form-control input-lg textarea" %>      
    </div>


    <div class="row">
        <div class="col-md-2 ">
            <%= link_to "Back to Projects", projects_path, class: "button btn btn-lg btn-success" %>
        </div>

        <div class = "col-md-7">
        </div>

        <div class = "col-md-2">
            <%= f.submit class: "btn btn-lg btn-success" %>
        </div>
    </div>
<% end %>