
<h3> Projects </h3>

<%= link_to "Add new Project!", new_project_path, class: "button btn btn-lg btn-success" %>

<% if @count>0 %>

<table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= p.project_name %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to "Delete this Project", project_path(p), 
                      method: :delete,
                      data: {confirm: "Are you sure?"}, 
                      class: "btn btn-xs btn-danger" %>

            <%= link_to "Edit this Project", edit_project_path(p),
                      class: "btn btn-xs btn-success" %>

            <%= link_to "Manage Users", project_path(p),
                      class: "btn btn-xs btn-success" %>

            <%= link_to "Manage Bugs", edit_project_path(p),
                      class: "btn btn-xs btn-success" %>
          
          </td>
          
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>


<% else %>
    <h3> You do not have any project </h3>
<%  end %>
